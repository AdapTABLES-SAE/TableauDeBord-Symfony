{% extends 'base.html.twig' %}

{% block title %}Liste des élèves{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/teacher_dashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="dashboard">
        <header class="dashboard-header">
            <a href="{{ path('teacher_dashboard') }}" class="back-btn">⬅</a>
            <div class="logo">Classe <span>{{ classe.nom }}</span></div>
            <div class="teacher-info">
                Identifiant : {{ classe.identifiant }}
            </div>
        </header>

        <main class="dashboard-main">
            <table class="classes-table">
                <thead>
                <tr>
                    <th></th>
                    <th>Nom élève</th>
                    <th>Prénom élève</th>
                    <th>Identifiant</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for eleve in eleves %}
                    <tr class="eleve-row" onclick="goToProgression({{ eleve.id }})" style="cursor:pointer;">
                        <td>
                            <button class="edit-btn" onclick="event.stopPropagation(); enableEdit({{ eleve.id }})">✏️</button>
                        </td>

                        <td>
                            <form id="form-nom-{{ eleve.id }}" action="{{ path('eleve_edit', {id: eleve.id}) }}" method="POST" style="display:flex;align-items:center;" onclick="event.stopPropagation();">
                                <input id="input-nom-{{ eleve.id }}" type="text" name="nom" value="{{ eleve.nom }}" readonly class="edit-input">
                        </td>

                        <td>
                            <input id="input-prenom-{{ eleve.id }}" type="text" name="prenom" value="{{ eleve.prenom }}" readonly class="edit-input">
                            </form>
                        </td>

                        <td class="identifiant">{{ eleve.identifiant }}</td>

                        <td>
                            <button class="edit-btn" onclick="event.stopPropagation(); goToParcours({{ eleve.id }})">⚙️</button>
                            <form action="{{ path('eleve_delete', {id: eleve.id}) }}" method="POST" onclick="event.stopPropagation();" onsubmit="return confirm('Supprimer cet élève ?');" style="display:inline;">
                                <button class="delete-btn">❌</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align:center; color:#888;">
                            Aucun élève enregistré
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <!-- Bouton ➕ -->
            <div class="add-btn-wrapper">
                <button id="openAddModal" class="btn-plus">➕</button>
            </div>
        </main>

        <!-- Modale d’ajout -->
        <div id="addModal" class="modal">
            <div class="modal-content">
                <h2>Ajout d’un <span class="highlight">élève</span></h2>
                <form action="{{ path('eleve_add', {id: classe.id}) }}" method="POST" id="addEleveForm">
                    <input type="text" name="nom" placeholder="Nom" required class="modal-input">
                    <input type="text" name="prenom" placeholder="Prénom" required class="modal-input">
                    <input type="text" name="identifiant" placeholder="Identifiant de connexion (unique)" required class="modal-input identifiant-field">

                    <div class="modal-actions">
                        <button type="submit" class="btn-create">Créer</button>
                        <button type="button" id="closeAddModal" class="btn-cancel">Annuler</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <script>
        function enableEdit(id) {
            const inputNom = document.getElementById('input-nom-' + id);
            const inputPrenom = document.getElementById('input-prenom-' + id);
            const form = document.getElementById('form-nom-' + id);

            inputNom.removeAttribute('readonly');
            inputPrenom.removeAttribute('readonly');

            inputNom.focus();

            function submitOnBlur() {
                form.submit();
            }

            inputNom.addEventListener('blur', submitOnBlur, { once: true });
            inputPrenom.addEventListener('blur', submitOnBlur, { once: true });
        }

        function goToProgression(eleveId) {
            window.location.href = "/enseignant/eleve/" + eleveId + "/progression";
        }

        function goToParcours(eleveId) {
            window.location.href = "/enseignant/eleve/" + eleveId + "/parcours";
        }

        // Ouvrir la pop-up
        document.getElementById('openAddModal').addEventListener('click', () => {
            document.getElementById('addModal').style.display = 'flex';
        });

        // Fermer la pop-up
        document.getElementById('closeAddModal').addEventListener('click', () => {
            document.getElementById('addModal').style.display = 'none';
        });

    </script>
{% endblock %}
