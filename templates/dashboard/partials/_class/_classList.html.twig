<div class="w-100 h-100 py-3">
    <h4 class="fw-bold mb-3">Liste des classes</h4>
    <div class="classe-list overflow-auto">
        <div class="d-flex flex-column gap-2">
            {% for classe in classes %}
                <input
                    type="radio"
                    class="btn-check"
                    name="elementSelection_classes"
                    id="classes-classe-{{ loop.index }}"
                    data-id="{{ classe.id }}"
                    autocomplete="off"
                >
                <label
                    class="btn btn-light text-start"
                    for="classes-classe-{{ loop.index }}"
                >
                    {{ classe.name }}
                </label>
            {% endfor %}
        </div>
        <hr>
        <button class="btn btn-dark w-100 mt-2">
            Ajouter une classe
            <i class="ms-1 bi bi-plus-circle"></i>
        </button>
    </div>
</div>
