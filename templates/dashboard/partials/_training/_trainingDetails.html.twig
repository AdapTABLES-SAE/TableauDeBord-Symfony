<div id="includedDetailsPartial" class="w-100 h-100 py-3">

    {# ================= TITLE AREA ================= #}
    <div class="section-title-area mb-1 text-center position-relative">

        <div class="position-absolute top-0" style="left: 20px;">
            <button
                id="deleteTrainingBtn"
                class="btn btn-outline-danger"
                data-training-id="{{ training.id }}"
            >
                <i class="bi bi-trash"></i>
            </button>
        </div>

        <h2 class="fw-bold mb-3">
            Objectifs de l’entraînement
        </h2>

        <div class="input-group justify-content-center w-auto mx-auto">
            <input
                id="trainingTitle"
                type="text"
                class="save-able-field form-control text-center fw-semibold border-dark-subtle"
                value="{{ training.LearningPathID }}"
            >
        </div>

    </div>

    {# ================= OBJECTIVES CAROUSEL ================= #}
    <div class="section-objectives-area mb-4 px-5 rounded-bottom-5">

        <div class="objectives-carousel" tabindex="0">

            <button
                class="carousel-arrow carousel-arrow-left"
                aria-label="Objectif précédent"
                type="button"
            >
                ‹
            </button>

            <div class="carousel-viewport">
                <div class="carousel-track mt-2 mb-2">

                    {% for objectif in objectifs %}
                        <article
                            class="carousel-slide objective-card"
                            data-id="{{ objectif.id }}"
                            tabindex="-1"
                            role="group"
                            aria-label="Objectif {{ objectif.name }}"
                        >

                            <div class="card-body d-flex flex-column">

                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <i class="bi bi-bullseye fs-3"></i>
                                    <i class="bi bi-chevron-right tile-chevron"></i>
                                </div>

                                <div class="objective-title text-truncate-multiline mb-3">
                                    {{ objectif.name }}
                                </div>

                                <div class="mt-auto text-center">
                                    <div class="tile-hint mb-1">
                                        Accéder au détail de l’objectif
                                    </div>

                                    <div class="objective-info">
                                        <i class="bi bi-layers me-1"></i>
                                        {{ objectif.niveaux|length }} niveau(x)
                                    </div>
                                </div>

                            </div>

                        </article>
                    {% endfor %}

                </div>
            </div>

            <button
                class="carousel-arrow carousel-arrow-right"
                aria-label="Objectif suivant"
                type="button"
            >
                ›
            </button>

            <div class="carousel-indicators" aria-hidden="true">
                {% for objectif in objectifs %}
                    <button
                        class="carousel-indicator"
                        type="button"
                        tabindex="-1"
                    ></button>
                {% endfor %}
            </div>
        </div>


    </div>


    {# ================= ACTION BAR ================= #}
    <div class="section-buttons-area d-flex justify-content-between align-items-center px-4">

        <div class="d-flex gap-2">
            <button
                id="input_cancel_button"
                class="btn btn-outline-secondary disabled"
            >
                Annuler les modifications
            </button>
        </div>

        <div class="d-flex gap-2">

            <form
                id="save_form"
                action="{{ path('training_update', {'id': training.id }) }}"
                method="POST"
            >
                <button
                    type="submit"
                    id="input_save_button"
                    class="btn btn-outline-success disabled"
                >
                    Enregistrer
                </button>
            </form>

            <button class="btn btn-dark">
                <i class="bi bi-plus-circle me-1"></i>
                Ajouter un objectif
            </button>

        </div>

    </div>

</div>
