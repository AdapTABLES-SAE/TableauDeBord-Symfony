{% extends 'base.html.twig' %}

{% block title %}Création d'une classe{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' with {
            breadcrumb_items: [
                {'label': 'Entrainements ', 'url': path('class_dashboard')}
            ]
        } %}
    {% endblock %}
    <div class="container my-4">
        <div class="p-4 rounded-3" style="background-color:#d9d2ff;">
            <h1 class="text-center mb-4">Création d’une classe</h1>

            <!-- Nom de la classe -->
            <div class="mb-3">
                <label class="fw-semibold">Nom de la classe :</label>
                <div class="d-flex align-items-center gap-2">
                    <input type="text"
                           name="class_name"
                           class="form-control"
                           value="{{ class.name ?? '' }}">
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-pencil"></i>
                    </button>
                </div>
            </div>

            <!-- Bloc double liste -->
            <div class="bg-white p-4 shadow-sm rounded-3 mt-4">
                <h4 class="mb-3">Ajouter élèves</h4>

                <div class="d-flex align-items-center justify-content-between">

                    <!-- Liste des élèves disponibles -->
                    <div class="flex-grow-1 me-4">
                        <input type="text"
                               class="form-control mb-2"
                               placeholder="Rechercher un élève">

                        <div class="border rounded-3 p-2" style="max-height: 250px; overflow-y: auto;">
                            {% for student in available_students %}
                                <div class="list-item p-2 border-bottom">{{ student }}</div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Flèches -->
                    <div class="d-flex flex-column align-items-center gap-3">
                        <button class="btn btn-light border">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                        <button class="btn btn-light border">
                            <i class="bi bi-arrow-left"></i>
                        </button>
                    </div>

                    <!-- Liste des élèves de la classe -->
                    <div class="flex-grow-1 ms-4">
                        <div class="border rounded-3 p-2" style="max-height: 250px; overflow-y: auto;">
                            {% for student in class_students %}
                                <div class="list-item p-2 border-bottom">{{ student }}</div>
                            {% endfor %}
                        </div>
                    </div>

                </div>

                <!-- Boutons bas -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button class="btn btn-danger">
                        Abandonner la création <i class="bi bi-trash"></i>
                    </button>
                    <button class="btn btn-success">
                        Créer la classe <i class="bi bi-check-circle"></i>
                    </button>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
