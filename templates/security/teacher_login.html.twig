{% extends 'base.html.twig' %}

{% block title %}Connexion Enseignant - AdapTABLES{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/teacher_login.css') }}">
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h2 class="card-title text-center mb-3">
                    <span class="text-primary fw-bold">Adap</span><span class="text-dark">TABLES</span>
                </h2>
                <h5 class="card-subtitle text-center mb-4 text-muted">Connexion Professeurs</h5>

                <form method="post" action="{{ path('teacher_login') }}" class="login-form" autocomplete="off">
                    <div class="mb-3">
                        <label for="identifier" class="form-label fw-semibold">Identifiant Professeur</label>
                        <input type="text" name="identifier" id="identifier"
                               value="{{ identifier|e }}"
                               class="form-control"
                               placeholder="Identifiant">
                    </div>

                    {% if error %}
                        <div class="alert alert-danger py-2">{{ error }}</div>
                    {% endif %}

                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">Se connecter ➔</button>
                    </div>
                </form>

                <div class="text-center text-muted small mt-3">
                    Version 0.4.1 — Octobre 2024
                </div>
            </div>
        </div>
    </div>
{% endblock %}
