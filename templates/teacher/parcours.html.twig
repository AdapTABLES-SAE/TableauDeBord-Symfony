{% extends 'base.html.twig' %}

{% block title %}Modification du parcours d'entra√Ænement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/teacher_dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/parcours.css') }}">
{% endblock %}

{% block body %}
    <div class="dashboard parcours-page">
        <header class="dashboard-header">
            <a href="{{ path('classe_eleves', {id: eleve.classe.id}) }}" class="back-btn">‚¨Ö</a>
            <div class="logo">Modification du <span>parcours</span> d'entra√Ænement</div>
            <div class="teacher-info">{{ eleve.nom }} {{ eleve.prenom }}</div>
        </header>

        <div class="band">
            <div class="band-title">Progression Entrainement</div>
        </div>

        <main class="dashboard-main parcours-content">
            <div class="objectifs-grid">
                {% for objectif in objectifs %}
                    <section class="objectif-card">
                        <div class="objectif-header">
                            <div class="pill pill-yellow">
                                {{ objectif.titre }}
                                <form action="{{ path('objectif_delete', {id: objectif.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Supprimer cet objectif ?');">
                                    <button class="icon-btn danger">‚ùå</button>
                                </form>
                                <button type="button" class="chip chip-green">Pr√©requis</button>
                            </div>
                            <div class="pill pill-orange">
                                Tables travaill√©es : [{{ objectif.tables|join(', ') }}]
                                <button type="button" class="icon-btn yellow"
                                        onclick="openTablesModal({{ objectif.id }}, {{ objectif.tables|json_encode|raw }})">‚úèÔ∏è</button>
                            </div>
                        </div>

                        {% for niveau in objectif.niveaux|sort((a,b)=> a.numero <=> b.numero) %}
                            <div class="niveau-card">
                                <div class="niveau-head">
                                    <div class="niveau-title">L{{ niveau.numero }}</div>
                                    <div class="niveau-actions">
                                        <form action="{{ path('niveau_delete', {id: niveau.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Supprimer ce niveau ?');">
                                            <button class="round danger">‚ùå</button>
                                        </form>
                                    </div>
                                </div>

                                <div class="niveau-mini">
                                    <button type="button" class="pill pill-grey" onclick="toggleReglages({{ niveau.id }})">‚Ñπ R√©glages</button>
                                    <div class="mini-stat">
                                        <div class="mini-stat-label">Faits rencontr√©s</div>
                                        <div class="mini-stat-value">0%</div>
                                    </div>
                                    <div class="mini-stat">
                                        <div class="mini-stat-label">Succ√®s</div>
                                        <div class="mini-stat-value">0%</div>
                                    </div>
                                    <button type="button" class="pill pill-grey" onclick="openTasksModal({{ niveau.id }})">üìã T√¢ches</button>
                                </div>

                                <div id="reglages-{{ niveau.id }}" class="reglages hidden">
                                    <!-- r√©glages en dur -->
                                    <div class="reglages-section green">
                                        <div class="reglages-title">Crit√®re compl√©tion</div>
                                        <div class="grid-2">
                                            <div class="chip big">% vus <strong>100</strong></div>
                                            <div class="chip big">% succ√®s <strong>100</strong></div>
                                        </div>
                                    </div>
                                </div>

                                
                            </div>
                        {% endfor %}

                        <div class="add-level-area">
                            <form action="{{ path('niveau_auto_add', {id: objectif.id}) }}" method="post">
                                <button class="plus-vertical small">+</button>
                            </form>
                        </div>
                    </section>
                {% endfor %}

                <!-- Carte sp√©ciale "+" -->
                <section class="objectif-card add-card">
                    <form action="{{ path('objectif_add', {id: eleve.id}) }}" method="post">
                        <button class="plus-big">+</button>
                    </form>
                </section>
            </div>

            <div class="floating-save">üíæ</div>
        </main>
    </div>

    <!-- Modal Tables -->
    <div id="tablesModal" class="modal hidden">
        <div class="modal-content chooser">
            <h2>Tables concern√©es</h2>
            <form id="tablesForm" method="post">
                <div class="tables-grid">
                    {% for i in 1..12 %}
                        <label class="table-choice">
                            <input type="checkbox" name="tables[]" value="{{ i }}">
                            <span>{{ i }}</span>
                        </label>
                    {% endfor %}
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn grad">Confirmer</button>
                    <button type="button" class="btn grad" onclick="closeTablesModal()">Annuler</button>
                </div>
            </form>
        </div>
    </div>

    <script src="{{ asset('js/parcours.js') }}"></script>
{% endblock %}
