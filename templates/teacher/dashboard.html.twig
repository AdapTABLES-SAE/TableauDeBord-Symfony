{% extends 'base.html.twig' %}

{% block title %}Tableau de bord enseignant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/teacher_dashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="dashboard-container">

        <!-- Colonne gauche : Liste des classes -->
        <aside class="sidebar">
            <h2>Liste des classes</h2>

            <div class="class-list">
                <p class="no-class">Aucune classe disponible</p>
            </div>

            <button class="add-class-btn">
                Ajouter une classe <span class="plus-icon">＋</span>
            </button>
        </aside>

        <!-- Colonne droite : Détail de la classe -->
        <main class="class-detail">
            <p>Contenu détaillé de la classe à venir...</p>
        </main>

    </div>
{% endblock %}
