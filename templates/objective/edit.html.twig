{% extends 'base.html.twig' %}

{% block title %}Édition objectif - AdapTABLES{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/objective/objective_builder.css') }}">
    <link rel="stylesheet" href="{{ asset('css/objective/level_block.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/task_modals.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/c1task_preview.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/c2task_preview.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/rectask_preview.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/idtask_preview.css') }}">
    <link rel="stylesheet" href="{{ asset('css/task/membtask_preview.css') }}">
    <link rel="stylesheet" href="{{ asset('css/objective/prereq_modal.css') }}">
{% endblock %}

{% block body %}
    {% include 'components/header.html.twig' with {
        breadcrumb_items: [
            {'label': 'Mes classes', 'url': path('class_dashboard')},
            {'label': 'Objectif', 'url': '#'}
        ]
    } %}

    {% set baseTables = (objectif.niveaux|first ? (objectif.niveaux|first).tables : []) %}
    {% set selectedTables = baseTables is iterable ? baseTables : [] %}

    <div class="page-wrapper mt-3 py-4">
        <div class="container card shadow section-card p-4">

            <div class="row">
                <!-- Colonne gauche -->
                <div class="col-lg-4 left-panel">

                    <!-- Nom de l'objectif -->
                    <div class="section-title mb-3">
                        <i class="bi bi-bullseye me-2"></i> Nom de l’objectif :
                    </div>

                    <form id="objectiveForm" method="post">
                        <div class="input-group mb-4 objective-name-group">
                            <input type="text"
                                   class="form-control form-control-lg"
                                   name="objective_name"
                                   id="objective_name"
                                   value="{{ objectif.name }}"
                                   autocomplete="off">
                            <span class="input-group-text">
                                <i class="bi bi-pencil"></i>
                            </span>
                        </div>

                        <!-- Tables travaillées (appliquées à tous les niveaux) -->
                        <div class="section-title mb-2">
                            <i class="bi bi-grid-3x3-gap-fill me-2"></i> Tables travaillées
                        </div>

                        <div id="tables-wrapper" class="tables-grid mb-4">
                            {% for t in 1..12 %}
                                {% set isActive = (t in selectedTables) or ((t ~ '') in selectedTables) %}

                                <button type="button"
                                        class="btn table-pill {{ isActive ? 'active' : '' }}"
                                        data-value="{{ t }}">
                                    {{ t }}
                                </button>
                            {% endfor %}
                        </div>

                        <!-- Prérequis (vues / complétées) -->
                        <div class="section-title mb-2">
                            <i class="bi bi-flag me-2"></i> Prérequis
                        </div>

                        <button type="button" id="btn-open-prereq-modal" class="btn-add-prereq mb-4">
                            <i class="bi bi-plus-circle me-2"></i> Ajouter un prérequis
                        </button>

                        <div id="prerequisites-list" class="d-flex flex-column gap-2 mb-2">
                            {% for p in objectif.prerequis %}
                            {# 1. Récupération des entités #}
                            {% set targetObj = find_objective_entity(p.requiredObjective, entrainement) %}
                            {% set targetLvl = find_level_entity(p.requiredLevel, entrainement) %}

                            {# 2. Vérification (Twig utilise 'and', pas '&&') #}
                            {% if targetObj and targetLvl %}
                            {% include 'objective/_prereq_badge.html.twig' with {
                            'p': p,

                            'targetObjName': targetObj.name|default(targetObj.objID),
                            'targetLvlName': targetLvl.name|default(targetLvl.levelID),

                            'targetObjDbId': targetObj.id,
                            'targetLvlDbId': targetLvl.id
                            } %}
                            {% endif %}
                            {% endfor %}
                        </div>

                        <!-- Preview params -->
                        <div class="preview-container mb-4">

                            <div class="preview-header mb-2 d-flex justify-content-between align-items-center">
                                <span>Aperçu aléatoire</span>

                                <button type="button" id="refresh-preview-btn" class="btn-refresh-preview" title="Régénérer les exemples">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </div>

                            <div id="preview-info-line" class="small text-muted mb-3" style="font-size: 0.85rem;">
                                Calcul en cours...
                            </div>

                            <div id="preview-box" class="preview-grid">
                                <div class="preview-empty">
                                    Sélectionnez des tables pour voir des exemples.
                                </div>
                            </div>

                            <div class="text-center mt-2">
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    Basé sur la configuration de vos niveaux.
                                </small>
                            </div>
                        </div>

                        <!-- Bouton sauvegarde -->
                        <div class="text-end">
                            <button type="button" id="save-all-btn" class="btn btn-violet px-4">
                                <i class="bi bi-save2 me-1"></i> Enregistrer toutes les modifications
                            </button>
                        </div>
                        <div id="save-loader" class="save-loader d-none">
                            <div class="spinner-border text-violet" role="status"></div>
                            <span class="ms-2">Enregistrement...</span>
                        </div>
                    </form>
                </div>

                <!-- Colonne droite : Niveaux -->
                <div class="col-lg-8 right-panel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="section-title mb-0">
                            <i class="bi bi-diagram-3 me-2"></i> Niveaux :
                        </div>

                        <button type="button"
                                id="add-level-btn"
                                class="btn btn-violet btn-sm">
                            <i class="bi bi-plus-circle me-1"></i> Ajouter un niveau
                        </button>
                    </div>

                    <div id="levels-container" class="levels-container">
                        {% if objectif.niveaux is not empty %}
                            {% for niveau in objectif.niveaux %}
                                {% include 'objective/_level_block.html.twig' with {
                                    niveau: niveau,
                                    index: loop.index,
                                    active: loop.first
                                } %}
                            {% endfor %}
                        {% else %}
                            <div id="no-levels-alert" class="alert alert-info small">
                                Aucun niveau pour le moment. Cliquez sur <strong>Ajouter un niveau</strong>.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>
    </div>

    {# ===================== MODALES DE TÂCHES ===================== #}
    {% include 'objective/_modal_task_c1.html.twig' %}
    {% include 'objective/_modal_task_c2.html.twig' %}
    {% include 'objective/_modal_task_rec.html.twig' %}
    {% include 'objective/_modal_task_id.html.twig' %}
    {% include 'objective/_modal_task_memb.html.twig' %}

    {# MODALE PREREQUIS #}
    {% include 'objective/_modal_prereq.html.twig' %}

    {# Toasts génériques pour showToast() #}
    {% include 'components/toast.html.twig' with {
        toast_success_title: "Modifications enregistrées",
        toast_success_message: "Les paramètres ont bien été enregistrés.",
        toast_error_title: "Erreur",
        toast_error_message: "Une erreur est survenue lors de l’enregistrement."
    } %}

    <script>
        window.OBJECTIVE_CONFIG = {
            objectiveId: {{ objectif.id }},
            addLevelUrl: '{{ path('objective_add_level', {id: objectif.id}) }}',
            saveLevelUrlTemplate: '{{ path('objective_save_level', {id: 999999})|replace({'999999':'__LEVEL_ID__'}) }}',
            deleteLevelUrlTemplate: '{{ path('objective_delete_level', {id: 999999})|replace({'999999':'__LEVEL_ID__'}) }}',
            saveTaskUrlTemplate: '{{ path('objective_save_task', {id: 999999})|replace({'999999':'__LEVEL_ID__'}) }}',
            deleteTaskUrlTemplate: '{{ path('objective_delete_task', {id: 999999})|replace({'999999':'__LEVEL_ID__'}) }}',
            saveAllUrl: '{{ path('objective_save_all', {id: objectif.id}) }}',
            apiDataUrl: '{{ path('objective_api_data', {entrainement: entrainement.id}) }}?exclude_id={{ objectif.id }}',
            addPrerequisUrl: '{{ path('objective_add_prerequis', {id: objectif.id}) }}',
            deletePrerequisUrlTemplate: '{{ path('objective_delete_prerequis', {id: 999999})|replace({'999999':'__ID__'}) }}',
            editPrerequisUrlTemplate: '{{ path('objective_edit_prerequis', {id: 999999})|replace({'999999':'__ID__'}) }}'
        };
    </script>
    <script type="module" src="{{ asset('js/objective_builder.js') }}"></script>

{% endblock %}
