{# Tâche C1 : 1 élément manquant #}
<div class="modal fade task-modal" id="taskModalC1" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content task-modal-content">

            <div class="modal-header task-modal-header bg-violet text-white">
                <h5 class="modal-title">
                    <i class="bi bi-1-circle me-2"></i> Tâche complétion – 1 élément manquant (C1)
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body task-modal-body">
                <input type="hidden" id="c1_levelId">

                <div class="task-section">
                    <div class="task-section-title">Élément(s) recherché(s)</div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="c1_target_result">
                                <label class="form-check-label" for="c1_target_result">Résultat</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="c1_target_table">
                                <label class="form-check-label" for="c1_target_table">Opérande "table"</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="c1_target_operand">
                                <label class="form-check-label" for="c1_target_operand">Opérande "facteur"</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="task-section">
                    <div class="task-section-title">Modalité de réponse</div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input c1-modality" type="checkbox" id="c1_mod_choice">
                                <label class="form-check-label" for="c1_mod_choice">Choix parmi plusieurs réponses</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input c1-modality" type="checkbox" id="c1_mod_input">
                                <label class="form-check-label" for="c1_mod_input">Saisie libre</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-text small text-muted">
                        Une seule modalité doit être activée.
                    </div>
                </div>

                <div class="task-section">
                    <div class="task-row">
                        <span>Nombre de mauvaises réponses à proposer</span>
                        <div class="task-slider">
                            <input type="range" min="2" max="5" id="c1_nbIncorrect" class="form-range">
                            <span class="task-slider-value">
                                <span id="c1_nbIncorrect_value">3</span> mauvaises propositions
                            </span>
                        </div>
                    </div>

                    <div class="task-row">
                        <span>Durée max d’acceptation des réponses</span>
                        <div class="task-slider">
                            <input type="range" min="5" max="60" step="5" id="c1_time" class="form-range">
                            <span class="task-slider-value">
                                <span id="c1_time_value">30</span> secondes
                            </span>
                        </div>
                    </div>

                    <div class="task-row">
                        <span>Succès consécutifs pour valider un fait</span>
                        <div class="task-slider">
                            <input type="range" min="1" max="10" id="c1_successes" class="form-range">
                            <span class="task-slider-value">
                                <span id="c1_successes_value">1</span> succès
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer task-modal-footer">
                <button type="button" class="btn btn-outline-danger me-auto d-none" id="c1_deleteBtn">
                    Supprimer la tâche
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-violet task-confirm-btn" id="c1_confirmBtn">
                    <i class="bi bi-check2-circle me-1"></i> Confirmer
                </button>
            </div>
        </div>
    </div>
</div>
