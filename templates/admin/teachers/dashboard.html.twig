{# templates/admin/teachers/admin_dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Administration – Enseignants{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin_teachers.css') }}">
{% endblock %}

{% block body %}

    <div class="admin-wrapper container py-4">

        <div class="admin-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="page-title m-0">
                <i class="bi bi-shield-lock-fill me-2"></i>Gestion des enseignants
            </h2>

            <a href="{{ path('teacher_logout') }}" class="btn btn-outline-violet">
                <i class="bi bi-box-arrow-right me-1"></i> Déconnexion
            </a>
        </div>


        {# Messages flash #}
        {% for label, messages in app.flashes %}
            {% for m in messages %}
                <div class="alert alert-{{ label }} shadow-sm">{{ m }}</div>
            {% endfor %}
        {% endfor %}

        <div class="admin-card shadow-sm p-4 mb-4 rounded-4">
            <h4 class="section-title mb-3">
                <i class="bi bi-person-plus-fill me-2"></i> Ajouter un enseignant
            </h4>

            <form action="{{ path('admin_teacher_add') }}" method="POST" class="row g-3">

                <div class="col-md-5">
                    <label class="form-label">Identifiant</label>
                    <input type="text" name="idProf" class="form-control form-control-lg admin-input" required>
                </div>

                <div class="col-md-5">
                    <label class="form-label">Nom complet</label>
                    <input type="text" name="name" class="form-control form-control-lg admin-input" required>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-violet w-100 py-2">
                        <i class="bi bi-plus-circle me-1"></i> Ajouter
                    </button>
                </div>

            </form>
        </div>


        <div class="admin-card shadow-sm p-4 rounded-4">
            <h4 class="section-title mb-3">
                <i class="bi bi-people-fill me-2"></i> Liste des enseignants
            </h4>

            {% if teachers is not empty %}
                <table class="table table-hover align-middle admin-table">
                    <thead class="table-violet text-white">
                    <tr>
                        <th>Identifiant</th>
                        <th>Nom</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for t in teachers %}
                        <tr>
                            <td class="fw-semibold">{{ t.idProf }}</td>
                            <td>{{ t.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-muted">Aucun enseignant trouvé.</p>
            {% endif %}
        </div>

    </div>

{% endblock %}
